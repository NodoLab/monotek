//
// --------------------------------------------------

// Common blocks
// --------------------------------------------------
html, body
	height: 100%

body
	min-width: 980px 
	font-family: $font-base
	font-size: $size-base
	color: $color-base
	line-height: 1.35
	background-color: $bg-base
.out
	min-height: 100%
	height: auto !important
	height: 100%

table,
.table
	font-family: $font-base
	font-size: $size-m
	line-height: 1.35
	color: $color-base
	text-align: left
	&.table_bg
	thead
		tr
			&:first-child
				td
					border-top: none
	th, td
		border: 1px solid #d1d1d1
		border-width: 1px 0
		padding: 9px 10px 8px
		&.table__bordernone
			border-color: transparent
	th
		font-family: $font-bold
		font-weight: normal
		border-width: 1px 0 0
	sup
		vertical-align: top

p + table
	margin-top: 25px

//
// --------------------------------------------------
.elements
	width: 375px
	margin: auto

.page
	margin-bottom: 50px
	&.page_index
		margin-bottom: 0

.page-title
	+clr
	.page-title__back
		float: right

// Breadcrumbs
// --------------------------------------------------
.breadcrumbs
	line-height: 1
	margin-bottom: 15px
	li
		position: relative
		display: inline-block
		vertical-align: top
		font-size: $size-xs
		color: $font-base
		padding-left: 19px
		&:before
			position: absolute
			top: 50%
			margin-top: -2px
			left: 6px
			width: 4px
			height: 4px
			+border-radius(50%)
			background: $gray-light
			content: ""
		&:first-child
			padding-left: 0
			&:before
				content: none
		a
			color: inherit
			text-decoration: underline
			&:hover
				text-decoration: none

// Gallery
// --------------------------------------------------
.gallery
	.gallery__list
		+clr
		margin-left: -20px
		margin-top: -25px
	.gallery__item
		float: left
		width: 210px
		margin-left: 20px
		margin-top: 25px
		> a
			display: block
			color: inherit
			text-decoration: none
	.gallery__pic
		height: 160px
		margin-bottom: 10px
		+border-radius(2px)
		background-color: $yellow
		overflow: hidden
		img
			display: block
	.gallery__desc
		font-size: $size-xs

.flexslider
	// padding-bottom: 20px
	// margin-bottom: 20px
	// border-bottom: 1px solid #d7d7d7
	.flex-viewport
	.flexslider__slides
		> li
			+border-radius(3px)
			overflow: hidden
		a, img
			display: block
	.flexslider__control-thumbs
		+clr
		margin-left: -20px
		> li
			float: left
			width: 66px
			height: 66px
			margin-left: 20px
			margin-top: 20px
			overflow: hidden
			cursor: pointer
			+border-radius(3px)
			img
				display: block


.fancybox-wrap
	margin-top: 42px

.fancybox-opened
	.fancybox-skin
		+box-shadow(none)
.fancybox-skin
	padding: 20px !important
	+border-radius(3px)
.fancybox-title-float-wrap
	position: static
	margin-bottom: 0
	text-align: left
	.child
		font-family: $font-base
		font-size: $size-m
		font-weight: normal
		color: $gray-dark
		margin-right: 0
		line-height: 1.231
		padding: 10px 0 0
		+border-radius(0)
		background: none
		text-shadow: none
		white-space: normal
.fancybox-nav
	position: absolute
	// top: 0
	// width: auto
	// height: auto
	cursor: pointer
	text-decoration: none
	background: none
	-webkit-tap-highlight-color: rgba(0,0,0,0)
	z-index: 8040
	top: 50%
	margin-top: -31px
	span
		// position: absolute
		// cursor: pointer
		// z-index: 8040
		display: none
.fancybox-next
	+s(fancybox_next)
	right: -58px
.fancybox-prev
	+s(fancybox_prev)
	left: -58px
.fancybox-close
	+s(fancybox_close)
	top: -42px
	right: 0









